<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.paolobonomi.eattheball">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:isGame="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Activity.Activity.LaunchActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activity.Activity.MainGameActivity"
            android:screenOrientation="landscape">
        </activity>

        <activity
            android:name=".Activity.Activity.MainMenuActivity"
            android:screenOrientation="landscape">
        </activity>

        <activity
            android:name=".Activity.Activity.NewHighScoreActivity"
            android:screenOrientation="landscape">
        </activity>

        <activity
            android:name=".Activity.Activity.ShopActivity"
            android:screenOrientation="landscape">
        </activity>

        <activity
            android:name=".Activity.Activity.HighScoresActivity"
            android:screenOrientation="landscape">
        </activity>

    </application>

    <uses-feature android:name="android.hardware.screen.landscape"/>
    <uses-feature android:name="android.hardware.sensor.gyroscope"/>
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />
    <uses-permission android:name="android.permission.VIBRATE" />

</manifest>