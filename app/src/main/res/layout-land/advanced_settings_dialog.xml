<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:padding="10dp"
    android:minWidth="300dp"
    android:measureWithLargestChild="true"
    android:background="@color/lightblue"
    android:fadingEdge="horizontal|vertical"
    android:layout_centerInParent="true">

    <CheckBox
        android:text="@string/showFPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showFPS"
        android:layout_gravity="center_vertical|start" />

    <CheckBox
        android:text="@string/showScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showScore"
        android:layout_gravity="center_vertical|start"/>

    <CheckBox
        android:id="@+id/showCombo"
        android:text="@string/showCombo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"/>

    <CheckBox
        android:text="@string/show24h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show24h"
        android:layout_gravity="center_vertical|start"/>

</LinearLayout>