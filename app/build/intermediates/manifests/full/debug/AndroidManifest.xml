<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.paolobonomi.eattheball"
    android:versionCode="2"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="25" />

    <uses-feature android:name="android.hardware.screen.landscape" />
    <uses-feature android:name="android.hardware.sensor.gyroscope" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:isGame="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.paolobonomi.eattheball.Activity.Activity.LaunchActivity"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.paolobonomi.eattheball.Activity.Activity.MainGameActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.paolobonomi.eattheball.Activity.Activity.MainMenuActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.paolobonomi.eattheball.Activity.Activity.NewHighScoreActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.paolobonomi.eattheball.Activity.Activity.ShopActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.paolobonomi.eattheball.Activity.Activity.HighScoresActivity"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>