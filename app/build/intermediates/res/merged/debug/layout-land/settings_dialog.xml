<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:padding="10dp"
    android:minWidth="300dp"
    android:measureWithLargestChild="true"
    android:background="@color/lightblue"
    android:fadingEdge="horizontal|vertical"
    android:layout_centerInParent="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button android:id="@+id/st_calibrate_button"
            android:text="@string/calibrate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_margin="10dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView android:id="@+id/st_sensitivity_text"
                android:text="@string/sensitivity"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center" />

            <SeekBar android:id="@+id/st_sensitivity_seekBar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <Button android:id="@+id/st_flip_screen_button"
            android:text="@string/change_orientation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_margin="10dp" />

        <Button
            android:text="@string/advanced_settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/advanced_settings"
            android:layout_weight="1.2"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_gravity="end" />
    </LinearLayout>

</LinearLayout>